{
  "name": "ct-iot-thing-service",
  "version": "1.0.1",
  "description": "CT IoT Thing Service",
  "main": "index.ts",
  "author": "Darryl Morton",
  "license": "GNU",
  "scripts": {
    "depcheck": "depcheck",
    "lint": "eslint . --ext .ts --ext .tsx",
    "dev:migrate": "NODE_ENV=development NODE_OPTIONS='--import tsx' npx knex migrate:latest",
    "dev:start": "NODE_ENV=development NODE_OPTIONS='--import tsx' nodemon -q ./src/index.ts",
    "test:unit": "NODE_ENV=test NODE_OPTIONS='--import tsx' mocha --config ./test/mocharc.json ./test/unit/**/*.test.ts",
    "test:integration-db": "NODE_ENV=test NODE_OPTIONS='--import tsx' mocha --config ./test/mocharc.json --recursive ./test/integration/db/*.test.ts",
    "test:integration-api": "NODE_ENV=test NODE_OPTIONS='--import tsx' mocha --config ./test/mocharc.json --recursive ./test/integration/api/*.test.ts",
    "test:integration": "npm run test:integration-db && npm run test:integration-api",
    "test": "npm run test:unit && npm run test:integration",
    "test:migrate": "NODE_ENV=test NODE_OPTIONS='--import tsx' npx knex migrate:latest",
    "test:seed": "NODE_ENV=test NODE_OPTIONS='--import tsx' npx knex seed:run",
    "stage:start": "NODE_ENV=staging NODE_OPTIONS='--import tsx' npx knex migrate:latest && npx knex seed:run && NODE_ENV=staging node ./src/index.js",
    "prod:start": "NODE_ENV=production NODE_OPTIONS='--import tsx' node src/index.ts"
  },
  "engines": {
    "node": ">=20.11"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-openapi": "^12.1.3",
    "knex": "^3.1.0",
    "openapi-response-validator": "^12.1.3",
    "openapi-types": "^12.1.3",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^5.4.3",
    "uuid": "^9.0.1",
    "winston": "^3.12.0"
  },
  "peerDependencies": {
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.4",
    "pg": "^8.11.3",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "chai": "^5.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
