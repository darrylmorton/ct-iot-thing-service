{
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/api-v1/api-doc.ts",
        "src/api-v1/routes/**",
        "src/env.ts",
        "src/logger.ts",
        "src/index.ts",
        "src/types/**",
        "test/**"
    ],
    "reporter": [
        "html",
        "lcov",
        "text",
        "text-summary"
    ],
    "report-dir": "coverage",
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "watermarks": {
        "lines": [80, 95],
        "functions": [80, 95],
        "branches": [80, 95],
        "statements": [80, 95]
    }
}
